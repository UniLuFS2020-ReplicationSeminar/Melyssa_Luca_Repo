capture log closeclearclear mataclear matrixset more off, permanentlyset mem 2000****----Fig1a: No covariatesuse "Reply to Albouy dataset for AER replication filing May 2 2012.dta", clearkeep if source0==1*--Create variable for positioning marker labelsgen pos=3replace pos = 5 if shortnam == "TUN"replace pos = 4 if shortnam == "SEN"replace pos = 2 if shortnam == "KEN"replace pos = 2 if shortnam == "SLE"replace pos = 1 if shortnam == "VNM"replace pos = 4 if shortnam == "TTO"replace pos = 2 if shortnam == "MEX"replace pos = 4 if shortnam == "EGY"twoway(scatter risk logmort0, msymbol(o) msize(small) mlabel(shortnam) mlabv(pos) mlabsize(small)) (lfit risk logmort0), legend(off) ytitle("Expropriation Risk") xtitle("Log Settler Mortality") title("Figure 1a: Without Controls", size(large)) graphregion(color(white)) ylab(4(2)10, nogrid) saving(Fig1a.gph,replace)graph export Fig1a.eps, replace****----Fig1b: Remove latitude and continent dummiesuse "dataset used for final AER rebuttal Sept 11 2011", clearkeep if source0==1reg risk asia africa other latitude predict Rrisk, residreg logmort0 asia africa other latitude predict Rlmort, resid*--Create variable for positioning marker labelsgen pos=3replace pos = 4 if shortnam == "SLE"replace pos = 4 if shortnam == "IND"replace pos = 4 if shortnam == "SEN"replace pos = 2 if shortnam == "DZA"replace pos = 2 if shortnam == "COG"replace pos = 2 if shortnam == "NZL"replace pos = 2 if shortnam == "CAN"twoway(scatter Rrisk Rlmort, msymbol(o) msize(small) mlabel(shortnam) mlabv(pos) mlabsize(small)) (lfit Rrisk Rlmort), legend(off) ytitle("Residual Expropriation Risk") xtitle("Residul Log Settler Mortality") title("Figure 1b: Controlling for Latitude and Continent Dummies", size(large)) graphregion(color(white)) ylab(-2(2)3, nogrid)  saving(Fig1b.gph,replace)graph export Fig1b.eps, replacegraph combine Fig1a.gph Fig1b.gph, rows(2) xsize(7) ysize(10) iscale(*.5)graph export Fig1.eps, replace